# --- React + WordPress/WooCommerce for Neothek ---
RewriteEngine On
RewriteBase /

# Enable HTTP Authorization Header (required for WP REST API)
SetEnvIf Authorization "(.*)" HTTP_AUTHORIZATION=$1
RewriteCond %{HTTP:Authorization} ^(.*)
RewriteRule .* - [E=HTTP_AUTHORIZATION:%1]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# React as default (CLAVE: index.html antes que index.php)
DirectoryIndex index.html index.php

# === WORDPRESS ===
# If file or directory exists, serve it
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# WordPress REST API (WooCommerce)
RewriteRule ^wp-json(.*)$ /index.php [L]

# WooCommerce checkout/payment pages -> WordPress
RewriteRule ^finalizar-compra(.*)$ /index.php [L]
RewriteRule ^mi-cuenta(.*)$ /index.php [L]

# WordPress uploads (videos, images) -> serve directly or via WordPress
RewriteRule ^wp-content/uploads/(.*)$ /wp-content/uploads/$1 [L]
RewriteRule ^wp-content/(.*)$ /wp-content/$1 [L]
RewriteRule ^wp-admin(.*)$ /wp-admin$1 [L]
RewriteRule ^wp-includes(.*)$ /wp-includes$1 [L]

# === REACT SPA ===
# Everything else goes to React
RewriteRule ^ /index.html [L]

# --- Security headers ---
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# --- MIME & CORS for fonts ---
<IfModule mod_mime.c>
  AddType font/woff2 .woff2
  AddType font/woff .woff
  AddType image/webp .webp
  AddType video/mp4 .mp4
</IfModule>

<FilesMatch "\.(woff2?|ttf|eot)$">
  <IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
  </IfModule>
</FilesMatch>

# --- Compression: Brotli then Gzip ---
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/plain text/html text/css application/javascript application/json image/svg+xml
</IfModule>

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/xml application/xhtml+xml application/rss+xml application/javascript application/json image/svg+xml
</IfModule>

# --- Serve precompressed if exists ---
<IfModule mod_mime.c>
  AddEncoding br .br
  AddEncoding gz .gz
</IfModule>

# --- Caching static assets (immutable) ---
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|webp|woff|woff2|ttf|eot|mp4|webm)$">
  <IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 year"
  </IfModule>
  <IfModule mod_headers.c>
    Header set Cache-Control "public, immutable"
  </IfModule>
</FilesMatch>

# --- Cache HTML corto ---
<FilesMatch "\.html$">
  <IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 0 seconds"
  </IfModule>
  <IfModule mod_headers.c>
    Header set Cache-Control "no-cache, must-revalidate"
  </IfModule>
</FilesMatch>

# --- ETags ---
FileETag MTime Size
